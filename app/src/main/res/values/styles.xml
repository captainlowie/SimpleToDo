<resources>

    <!-- MainActivity Light Theme-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/primaryLightColor</item>
        <item name="tintColor">@color/tintColor</item>
        <item name="textColor">@color/textColor</item>
    </style>

    <style name="NightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>
        <item name="colorControlHighlight">@color/primaryLightColorNight</item>
        <item name="tintColor">@color/tintColorNight</item>
        <item name="textColor">@color/textColorNight</item>
    </style>

    <style name="editTaskTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/editColorPrimary</item>
        <item name="colorPrimaryDark">@color/editColorPrimaryDark</item>
        <item name="colorAccent">@color/editColorAccent</item>
        <item name="colorControlHighlight">@color/editColorPrimaryLight</item>
    </style>

    <style name="addTaskTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/addColorPrimary</item>
        <item name="colorPrimaryDark">@color/addColorPrimaryDark</item>
        <item name="colorAccent">@color/addColorAccent</item>

    </style>

    <style name="editPicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="colorPrimary">@color/editColorPrimary</item>
        <item name="colorPrimaryDark">@color/editColorPrimaryDark</item>
        <item name="colorAccent">@color/editColorPrimaryLight</item>
    </style>

    <style name="addPicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="colorPrimary">@color/addColorPrimary</item>
        <item name="colorPrimaryDark">@color/addColorPrimaryDark</item>
        <item name="colorAccent">@color/addColorPrimaryLight</item>
    </style>
</resources>
